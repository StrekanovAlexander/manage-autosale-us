{{#if specifications }} 
    <div class="row">
        <div class="col-4">
            <table class="table table-sm table-bordered">
                <tr>
                    <th class="text-end">ID</th>
                    <th>Title</th>
                    <th class="text-center">Items</th>
                    <th class="text-center">Activity</th>
                    <th></th>
                </tr>
            {{#each specifications }}
                {{#with this.dataValues}}
                <tr>
                    <td class="text-end">{{ id }}</td>
                    <td>{{ title }}</td>
                    <td class="text-center">
                        <a href="/specifications/{{ id }}/specification-items">
                            <i class="bi bi-card-list"></i>
                        </a>
                    </td>
                    <td class="text-center">
                        {{#if activity }}
                            <i class="bi bi-check-square"></i>
                        {{else}}
                            <span class="text-muted">
                                <i class="bi bi-square"></i>
                            </span>
                        {{/if}}
                    </td>
                    <td class="text-center">
                        <a href="/specifications/{{ id }}/edit" class="{{#unless ../../access}} disabled{{/unless}}" title="Правка"> 
                            <i class="bi bi-gear"></i>
                        </a>
                    </td>
                </tr>
                {{/with}}
            {{/each}}
            </table>
        </div>
    </div>
{{/if }}
<div class="d-flex justify-content-start my-3">
    <a href="/specifications/create" class="btn btn-sm btn-primary{{#unless access}} disabled{{/unless}}">
        <i class="bi bi-plus-square"></i> Create
    </a>
</div>
