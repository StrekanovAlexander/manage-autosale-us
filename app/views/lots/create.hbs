<div class="row">
    <div class="col">
        <div class="card">
            <form action="/lots/create" method="POST">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            Main data
                        </div>
                        <div class="col-md-6 col-sm-12">
                            Specifications and Description
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="stock_id" class="form-label">Stock No</label>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control form-control-sm" id="stock_id" 
                                        name="stock_id" value="{{ stockId }}" readonly />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="number_id" class="form-label">Lot No</label>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control form-control-sm" id="number_id" 
                                        name="number_id" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="account_id" class="form-label">Account</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm form-select-required" id="account_id" name="account_id">
                                        {{#each accounts }}
                                            <option value="{{ this.dataValues.id }}">{{ this.dataValues.title }}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="brand_id" class="form-label small">Brand</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm form-select-required" id="brand_id" name="brand_id">
                                        <option value="">Select...</option>
                                        {{#each brands}}
                                            <option value="{{ this.dataValues.id }}">{{ this.dataValues.title }}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="model_id" class="form-label small">Model</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="model_id" name="model_id">
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="vin" class="form-label small">Vin</label>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control form-control-sm form-input-text-required" id="vin" 
                                        name="vin" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="state" class="form-label">Condition</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="state" name="state">
                                        {{#each states }}
                                            <option value="{{ this.dataValues.title }}">
                                                {{ this.dataValues.title }}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>    
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="year" class="form-label small">Year</label>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control form-control-sm form-input-number-required" id="year" 
                                        name="year" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="mileage" class="form-label">Mileage</label>
                                </div>
                                <div class="col">
                                    <input type="number" class="form-control form-control-sm" id="mileage" 
                                        name="mileage" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="status_id" class="form-label small">Status</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="lot_status_id" name="lot_status_id">
                                    {{#each lotStatuses}}
                                        <option value="{{ this.dataValues.id }}">{{ this.dataValues.title }}</option>
                                    {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="activity" class="form-label small">Activity</label>
                                </div>
                                <div class="col">
                                    <input class="form-check-input" type="checkbox" id="activity" name="activity" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="vehicle_style_id" class="form-label">Vehicle style</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm form-select-required" id="vehicle_style_id" name="vehicle_style_id">
                                        <option value="">Select...</option>
                                        {{#each vehicleStyles }}
                                            <option value="{{ this.dataValues.id }}">
                                                {{ this.dataValues.title }}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>    
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="drivetrain" class="form-label">Drivetrain</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="drivetrain" name="drivetrain">
                                        <option value="">Select...</option>
                                        {{#each drivetrains }}
                                            <option value="{{ this.dataValues.title }}">
                                                {{ this.dataValues.title }}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="transmission" class="form-label">Transmission</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="transmission" name="transmission">
                                        <option value="">Select...</option>
                                        {{#each transmissions }}
                                            <option value="{{ this.dataValues.title }}">{{ this.dataValues.title }}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="engine" class="form-label">Engine</label>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control form-control-sm" id="engine" 
                                        name="engine" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="horsepower" class="form-label">Horsepower</label>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control form-control-sm" id="horsepower" 
                                        name="horsepower" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="fuel_type" class="form-label">Fuel type</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="fuel_type" name="fuel_type">
                                        <option value="">Select...</option>
                                        {{#each fuelTypes }}
                                            <option value="{{ this.dataValues.title }}">
                                                {{ this.dataValues.title }}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-5">
                                    <label for="mpg_city" class="form-label">City gas mileage</label>
                                </div>
                                <div class="col">
                                    <input type="number" class="form-control form-control-sm" id="mpg_city" 
                                        name="mpg_city" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-5">
                                    <label for="mpg_highway" class="form-label">Highway gas mileage</label>
                                </div>
                                <div class="col">
                                    <input type="number" class="form-control form-control-sm" id="mpg_highway" 
                                        name="mpg_highway" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="exterior_color" class="form-label">Exterior color</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="exterior_color" name="exterior_color">
                                        <option value="">Select...</option>
                                        {{#each colors }}
                                            <option value="{{ this.dataValues.title }}">
                                                {{ this.dataValues.title }}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="interior_color" class="form-label">Interior color</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="interior_color" name="interior_color">
                                        <option value="">Select...</option>
                                        {{#each colors }}
                                            <option value="{{ this.dataValues.title }}">
                                                {{ this.dataValues.title }}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4">
                                    <label for="doors" class="form-label">Doors</label>
                                </div>
                                <div class="col">
                                    <select class="form-select form-select-sm" id="doors" name="doors">
                                        <option value="">Select...</option>
                                        {{#each doors }}
                                            <option value="{{ this.dataValues.title }}">{{ this.dataValues.title }}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="abs_brakes" class="form-label small">ABS brakes</label>
                                    <input class="form-check-input" type="checkbox" name="abs_brakes" id="abs_brakes" />
                                </div>
                                <div class="col-6">
                                    <label for="backup_camera" class="form-label small">Backup camera</label>
                                    <input class="form-check-input" type="checkbox" name="backup_camera" id="backup_camera" />
                               </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="blind_spot_monitoring" class="form-label small">Blind spot monitoring</label>
                                    <input class="form-check-input" type="checkbox" name="blind_spot_monitoring" id="blind_spot_monitoring" />
                                </div>
                                <div class="col-6">
                                    <label for="curtain_airbags" class="form-label small">Curtain airbags</label>
                                    <input class="form-check-input" type="checkbox" name="curtain_airbags" id="curtain_airbags" />
                               </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="driver_airbag" class="form-label small">Driver airbag</label>
                                    <input class="form-check-input" type="checkbox" name="driver_airbag" id="driver_airbag" />
                                </div>
                                <div class="col-6">
                                    <label for="front_side_airbags" class="form-label small">Front side airbags</label>
                                    <input class="form-check-input" type="checkbox" name="front_side_airbags" id="front_side_airbags" />
                               </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="parking_sensors" class="form-label small">Parking sensors</label>
                                    <input class="form-check-input" type="checkbox" name="parking_sensors" id="parking_sensors" />
                                </div>
                                <div class="col-6">
                                    <label for="passenger_airbag" class="form-label small">Passenger airbag</label>
                                    <input class="form-check-input" type="checkbox" name="passenger_airbag" id="passenger_airbag" />
                               </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="alloy_wheels" class="form-label small">Alloy wheels</label>
                                    <input class="form-check-input" type="checkbox" name="alloy_wheels" id="alloy_wheels" />
                                </div>
                                <div class="col-6">
                                    <label for="bluetooth" class="form-label small">Bluetooth</label>
                                    <input class="form-check-input" type="checkbox" name="bluetooth" id="bluetooth" />
                               </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="heated_seats" class="form-label small">Heated seats</label>
                                    <input class="form-check-input" type="checkbox" name="heated_seats" id="heated_seats" />
                                </div>
                                <div class="col-6">
                                    <label for="leather_seats" class="form-label small">Leather seats</label>
                                    <input class="form-check-input" type="checkbox" name="leather_seats" id="leather_seats" />
                               </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="navigation_system" class="form-label small">Navigation system</label>
                                    <input class="form-check-input" type="checkbox" name="navigation_system" id="navigation_system" />
                                </div>
                                <div class="col-6">
                                    <label for="sunroof_moonroof" class="form-label small">Sunroof moonroof</label>
                                    <input class="form-check-input" type="checkbox" name="sunroof_moonroof" id="sunroof_moonroof" />
                               </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label for="technology_package" class="form-label small">Technology package</label>
                                    <input class="form-check-input" type="checkbox" name="technology_package" id="technology_package" />
                                </div>
                            </div>    
                            <div class="row">
                                <div class="col">
                                    <label for="description" class="form-label small">Description</label>
                                    <textarea class="form-control form-control-sm" id="description" name="description"></textarea> 
                                </div> 
                             </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="/lots" class="btn btn-sm btn-primary">
                        <i class="bi bi-arrow-left-square"></i> Cancel
                    </a>
                    <button type="submit" id="button-submit" class="btn btn-sm btn-primary" disabled>
                        <i class="bi bi-save2"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{{{ script }}}